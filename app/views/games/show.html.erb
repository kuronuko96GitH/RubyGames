<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ゲームスコア詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @game.score %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>スコア</th>
                </tr>
                <tr>
                </tr>
              </table>
              <% if @game.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_game_path(@game), class: "button is-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @game.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
            </p>
          </div>
          <%= link_to user_path(@game.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @game.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>
